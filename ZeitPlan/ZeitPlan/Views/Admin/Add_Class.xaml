<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Add_Class" Title="Add Class">
    <ContentPage.Content>
        <StackLayout Padding="24">
            <Picker Title="--Select Degree" x:Name="ddlDegree"/>
           
           
            <Entry x:Name="txtClSession" Placeholder="Class Session" PlaceholderColor="Gray" ReturnType="Next" Keyboard="Chat"/>
            <Entry x:Name="txtClSection" Placeholder="Class Section" PlaceholderColor="Gray"  ReturnType="Next" Keyboard="Chat"/>
            <Entry x:Name="txtClShift" Placeholder="Shift"  ReturnType="Next" PlaceholderColor="Gray" Keyboard="Chat"/>
            <Entry x:Name="txtClName" Placeholder="Class Name"  ReturnType="Next" PlaceholderColor="Gray" Keyboard="Chat"/>
            <Entry x:Name="txtClSemester" Placeholder="Semester"  ReturnType="Next" PlaceholderColor="Gray" Keyboard="Numeric"/>
            
            <ActivityIndicator x:Name="LoadingInd" IsRunning="False" />
            <Button Text="Add Class" x:Name="btnClass"  CornerRadius="30" Clicked="btnClass_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>